
@model IEnumerable<IdentityRole> 

@{
    ViewData["Title"] = "Roles";
}

<h1 class="text-center mt-5 mb-4">All Roles</h1>

<partial name="RoleForm" model="new RoleFormViewModel()"/>
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(r=>r.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(r => r.Name)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn mb-2 text-warning">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <span class="details-text">Edit</span>
                        </a>
                        <a class="btn mb-2 text-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can"></i>
                            <span class="details-text">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Record</h2>
    </div>
}
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}