@model DubaiPhone.DTOs.CategoryDTOs.UpdateCategoryDTO

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="text-center">Edit Product</h1>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath" />

        <div class="form-group">
            <label class="fs-5 fw-bold mt-2 mb-2" for="ImageFile">Product Image</label>
            <input type="file" class="form-control-file" id="ImageFile" name="ImageFile">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <p>Current Image: @Model.ImagePath</p>
            }
        </div>

        <div class="form-group">
            <label class="fs-5 fw-bold mt-2 mb-2" for="ArabicName">Arabic Name</label>
            <input type="text" class="form-control" id="ArabicName" name="ArabicName" placeholder="Enter Arabic Name" value="@Model.ArabicName" required>
            <span asp-validation-for="ArabicName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="fs-5 fw-bold mt-2 mb-2" for="Name">English Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter English Name" value="@Model.Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="d-grid gap-2 mt-5">
            <button class="btn btn-outline-success" type="submit">Update</button>
        </div>
    </form>
</div>


