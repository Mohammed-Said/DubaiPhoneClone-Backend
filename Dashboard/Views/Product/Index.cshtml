@model IEnumerable<DubaiPhone.DTOs.productDTOs.GetAllProduct>

@{
    ViewData["Title"] = "Prodcuts";
}

<div class="mb-5 mt-5">
    <div class="row">
        <div class="col-2 d-flex justify-content-end fs-5 text-info-emphasis">
            Product Name
        </div>
        <div class="col-4">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>
        </div>

        <div class="col-6 d-flex justify-content-end">
            <button type="button" class="btn btn-outline-secondary">Add New Product</button>
        </div>
    </div>

</div>

<table class="table  table-hover" ">
    <thead class="table-primary">
        <tr>
            <th>Image</th>
            <th >Name</th>
            <th>Normal Price</th>
            <th>Sale Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img class="w-50" src="/Products/galaxy-s24-ultra-441x441.jpg">
            @*E:\ITI Gradution Project\DubaiPhoneClone-Backend\Dashboard\wwwroot\Products\galaxy-s24-ultra-441x441.jpg*@
            </td>
            <td>@item.Name</td>
            <td>@item.NormalPrice</td>
            <td>@item.SalePrice</td>
            <td>
                <div class="d-flex ">
                        <a class="btn mb-2 text-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square" ></i>
                        </a>
                    <a class="btn mb-2 text-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can"></i>
                    </a>
                </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
