@model IEnumerable<DubaiPhone.DTOs.BrandDTOs.GetBrandDTO>

@{
    ViewData["Title"] = "Brands";
}

<div class="mb-5 mt-5">
    <div class="row">
        <div class="col-2 d-flex justify-content-end fs-5 text-info-emphasis">
            Brand Name
        </div>
        <div class="col-4">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>
        </div>

        <div class="col-6 d-flex justify-content-end">
            <button type="button" class="btn btn-outline-secondary">
                <a class="btn " asp-action="Create"> Add New Brand</a>
            </button>
        </div>

    </div>

</div>

<table class="table  table-hover" >
    <thead class="table-primary">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>ArabicName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
            <tr>
                <td class="d-inline-block" style="width: 100px; height: 100px;">
                    <img class="w-100 h-100" src="/Brands/@item.ImagePath">
                </td>
                
                <td>@item.Name</td>
                <td>@item.ArabicName</td>
                <td>
                    <div class="d-flex ">
                        <a class="btn mb-2 text-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn mb-2 text-danger" asp-action="Delete"  asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </div>

                </td>
            </tr>
}
    </tbody>
</table>
