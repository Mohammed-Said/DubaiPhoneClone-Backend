@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">All Users</h1>
    @if (Model.Count() > 0)
    {
        <div class="container">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(u => u.UserName)</th>
                        <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(u => u.Email)</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@string.Join(",", user.Roles.ToList())</td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-3 p-3 alert-warning">
            <h2>There Is No Record</h2>
        </div>
    }
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
  </div>
